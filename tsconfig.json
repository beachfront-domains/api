{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "api",
    "paths": {
      "~init/*": ["init/*"],
      "~module/*": ["modules/*"],
      "~root/*": ["../*"],
      "~route/*": ["routes/*"],
      "~service/*": ["services/*"],
      "~schema/*": ["schema/*"],
      "~util/*": ["utils/*"]
    },
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "@types",
    "src/**/*"
  ]
}
