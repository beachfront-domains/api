{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "~module/*": ["./src/module/*"],
      "~root/*": ["./*"],
      "~service/*": ["./src/service/*"],
      "~schema/*": ["./src/schema/*"],
      "~util/*": ["./src/util/*"]
    },
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules/*"
  ],
  "include": [
    "./src/**/*"
  ]
}
